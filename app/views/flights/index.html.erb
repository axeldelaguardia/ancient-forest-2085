<h2>All Flights</h2>

<% @flights.each do |flight| %>
	<ul id=<%= flight.id %>>
		<li>Flight #<%= flight.number %> - <%= flight.airline.name %></li>
			Passengers:
			<ul id='passengers' >
				<% flight.passengers.each do |passenger| %>
					<li id=<%= passenger.id %> style='display:inline-block;'>
					<%= passenger.name %><%= button_to 'Remove from Flight', flight_passenger_path(passenger), method: :delete %>
					</li><br><br>
				<% end %>
			</ul>
	</ul>
<% end %>